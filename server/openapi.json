          },
          "mdp": {
            "type": "string",
            "example": "azerty2024"
          }
        }
      },
      "Verify_user": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "hexadecimal"
          }
        }
      },
      "CreateFamily": {
        "type": "object",
        "properties": {
          "nom": {
            "type": "string",
            "example": "Durand"
